<?xml version="1.0" encoding="UTF-8"?>
<profiles version="12">
  <profile kind="CodeFormatterProfile" name="CustomJavaFormat" version="12">
    <!-- Set maximum line length before wrapping -->
    <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="180"/>
    
    <!-- Preserve user-introduced line breaks in method parameters -->
    <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.never_indent_line_wrapping" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.formatter.join_lines_in_arguments" value="false"/>

    <!-- Preserve user-introduced line breaks in comments -->
    <setting id="org.eclipse.jdt.core.formatter.comment.format_line_comments" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_block_comments" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.new_lines_at_block_boundaries" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_blank_lines" value="3"/>
  </profile>
</profiles>
